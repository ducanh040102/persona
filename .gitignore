# === Ignore Everything in Assets ===
Assets/*

# === Allow Scripts ===
!Assets/**/*.cs
!Assets/**/*.cs.meta

!Assets/**/*.shader
!Assets/**/*.shader.meta

!Assets/**/*.cginc
!Assets/**/*.cginc.meta

!Assets/**/*.hlsl
!Assets/**/*.hlsl.meta

!Assets/**/*.asmdef
!Assets/**/*.asmdef.meta

!Assets/**/*.asmref
!Assets/**/*.asmref.meta

# === Allow Shader Graph & URP/HDRP Files ===
!Assets/**/*.shadergraph
!Assets/**/*.shadergraph.meta

!Assets/**/*.shadersubgraph
!Assets/**/*.shadersubgraph.meta

!Assets/**/*.renderpipeline
!Assets/**/*.renderpipeline.meta

!Assets/**/*.shadervariants
!Assets/**/*.shadervariants.meta

# === Allow Core Unity Assets ===
!Assets/**/*.unity                    # Scenes
!Assets/**/*.unity.meta

!Assets/**/*.prefab                  # Prefabs
!Assets/**/*.prefab.meta

!Assets/**/*.mat                     # Materials
!Assets/**/*.mat.meta

!Assets/**/*.anim                    # Animation Clips
!Assets/**/*.anim.meta

!Assets/**/*.controller              # Animator Controllers
!Assets/**/*.controller.meta

!Assets/**/*.overrideController
!Assets/**/*.overrideController.meta

# === Allow ScriptableObjects ===
!Assets/**/*.asset
!Assets/**/*.asset.meta

# === Allow Config Files ===
!Assets/**/*.json
!Assets/**/*.json.meta

!Assets/**/*.txt
!Assets/**/*.txt.meta

# === Allow Timeline Assets ===
!Assets/**/*.playable
!Assets/**/*.playable.meta

!Assets/**/*.timeline
!Assets/**/*.timeline.meta

# === Optional: Keep Folder Structure ===
!Assets/Scripts/
!Assets/Scripts/**
!Assets/Scenes/
!Assets/Scenes/**
!Assets/Prefabs/
!Assets/Prefabs/**
!Assets/Animations/
!Assets/Animations/**
!Assets/Materials/
!Assets/Materials/**
!Assets/Configs/
!Assets/Configs/**
!Assets/Animators/
!Assets/Animators/**
!Assets/ScriptableObjects/
!Assets/ScriptableObjects/**
!Assets/Shaders/
!Assets/Shaders/**
!Assets/Timelines/
!Assets/Timelines/**

